{
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "editor.fontFamily": "'FiraCode Nerd Font', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": "true",
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "editor.codeLensFontFamily": "'FiraCode Nerd Fon Mono' 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 15,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.build.forceRecipeUsage": false,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoClean.run": "onFailed",
    "C_Cpp.intelliSenseCacheSize": 2048,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "cmake.configureOnOpen": false,
    "editor.inlayHints.enabled": "off",
    "[latex]": {
        "editor.defaultFormatter": "mathematic.vscode-latex"
    },
}
